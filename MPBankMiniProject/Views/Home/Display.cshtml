@model DisplayViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome, @Model.FName @Model.LName.</h1>
    <div class="card" style="width: 18rem;">
        <img class=" img-thumbnail card-img-top" src="~/Images/@Model.Img" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">@Model.FName @Model.LName</h5>
            <p class="card-text">@Html.DisplayNameFor(x => x.Id): @Model.Id</p>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">@Html.DisplayNameFor(x=> x.Balance): @Model.Balance$</li>
            <li class="list-group-item">@Html.DisplayNameFor(x=> x.Email): @Model.Email </li>
        </ul>
    </div>
</div>

